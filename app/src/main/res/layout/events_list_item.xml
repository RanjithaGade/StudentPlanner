<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Class Name"
        android:id="@+id/class_name_tv"
        android:layout_marginLeft="20dp"
        android:textColor="#000"

        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/desc_tv"
        android:layout_marginLeft="5dp"
        android:textColor="#000"

        android:layout_toRightOf="@+id/class_name_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2015-12-01"
        android:id="@+id/date_tv"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:textColor="#757575"
        android:drawableLeft="@drawable/date_icon_24"
        android:layout_below="@id/class_name_tv"
        android:layout_toRightOf="@+id/time_tv"

        />
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/date_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/class_name_tv"

        android:layout_centerVertical="true"
        />-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="9:00 AM - 10:30 AM"
        android:drawableLeft="@drawable/time_icon_24"
        android:id="@+id/time_tv"
        android:gravity="center_vertical"
        android:textColor="#757575"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/class_name_tv"
        android:layout_alignLeft="@+id/class_name_tv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CS building Room 304A"
        android:drawableLeft="@drawable/location_icon_24"
        android:id="@+id/location_tv"
        android:gravity="center_vertical"
        android:textColor="#757575"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/time_tv"
        android:layout_alignLeft="@+id/time_tv"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Going"
        android:drawableLeft="@drawable/going_icon_24"
        android:id="@+id/interested_tv"
        android:gravity="center_vertical"
        android:textColor="#757575"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/time_tv"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>