<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="400dp"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Class Name"
        android:id="@+id/class_name_tv"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/desc_tv"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/class_name_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(mon,tue)"
        android:id="@+id/repeater_tv"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:textColor="#757575"
        android:layout_below="@id/class_name_tv"
        android:layout_toRightOf="@+id/time_tv"

        />
    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/date_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/class_name_tv"

        android:layout_centerVertical="true"
        />-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="9:00 AM - 10:30 AM"
        android:id="@+id/time_tv"
        android:textColor="#757575"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/class_name_tv"
        android:layout_alignLeft="@+id/class_name_tv"
        />

</RelativeLayout>