<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#2c2c2c"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/add_class_label"
        android:text="Add Class"
        android:textColor="#FFF"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name"
        android:id="@+id/name_lable"
        android:layout_below="@+id/add_class_label"

        android:layout_alignParentStart="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="31dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_et"
        android:layout_alignBottom="@+id/name_lable"
        android:layout_toEndOf="@+id/name_lable"
        android:hint="Name"
        android:layout_marginStart="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/desc_tv"

        android:layout_below="@+id/name_lable"
        android:layout_alignStart="@+id/name_lable"
        android:layout_marginTop="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/desc_et"
        android:hint="Description"
        android:layout_alignBottom="@+id/desc_tv"
        android:layout_alignStart="@+id/name_et" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Time"
        android:id="@+id/start_time_lable"
        android:layout_below="@+id/desc_tv"
        android:layout_alignStart="@+id/desc_tv"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="9:00 AM"
        android:id="@+id/start_time_tv"
        android:layout_alignBottom="@+id/start_time_lable"
        android:layout_alignStart="@+id/desc_et" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Time:"
        android:id="@+id/end_time_lable"
        android:layout_below="@+id/start_time_lable"
        android:layout_alignStart="@+id/start_time_lable"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10:30 AM"
        android:id="@+id/end_time_tv"
        android:layout_alignBottom="@+id/end_time_lable"
        android:layout_alignStart="@+id/start_time_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Start Date"
        android:id="@+id/start_date_lable"
        android:layout_below="@+id/end_time_lable"
        android:layout_alignStart="@+id/end_time_lable"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2015-12-01"
        android:id="@+id/start_date_tv"
        android:layout_alignBottom="@+id/start_date_lable"
        android:layout_alignStart="@+id/end_time_tv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Date"
        android:id="@+id/end_date_lable"
        android:layout_below="@+id/start_date_lable"
        android:layout_alignStart="@+id/start_date_lable"
        android:layout_marginTop="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2016-04-01"
        android:id="@+id/end_date_tv"
        android:layout_alignBottom="@+id/end_date_lable"
        android:layout_alignStart="@+id/start_date_tv" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Repeat On:"
        android:layout_marginTop="10dp"
        android:id="@+id/textView11"
        android:layout_below="@+id/end_date_lable"
        android:layout_alignLeft="@+id/end_date_lable" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_alignLeft="@+id/textView11"
        android:layout_below="@+id/textView11">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mo"
            android:id="@+id/mon"

            android:layout_marginTop="32dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tu"
            android:id="@+id/tue"

            android:layout_marginTop="32dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="we"
            android:id="@+id/wed"

            android:layout_marginTop="32dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="th"
            android:id="@+id/thu"

            android:layout_marginTop="32dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fr"
            android:id="@+id/fri"

            android:layout_marginTop="32dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sa"
            android:id="@+id/sat"

            android:layout_marginTop="32dp" />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="su"
            android:id="@+id/sun"
            android:layout_marginTop="32dp" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>